// .devcontainer/devcontainer.json
{
  "name": "uv-python",
  "service": "python",
  "dockerComposeFile": "./compose.yml",
  "workspaceFolder": "/home/vscode/python",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker"
      ]
    }
  }
}